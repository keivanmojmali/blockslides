{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Build-specific settings
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Stricter for production builds
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,

    // Paths for built packages (prioritize dist over src)
    "paths": {
      "@blockslides/*": ["packages/*/src", "packages/*/dist"],
      "@blockslides/pm/*": ["packages/pm/dist/*", "packages/pm/*"],
      "@blockslides/core": ["packages/core/dist", "packages/core/src"],
      "@blockslides/core/jsx-runtime": [
        "packages/core/dist/jsx-runtime/jsx-runtime",
        "packages/core/src/jsx-runtime"
      ],
      "@blockslides/core/jsx-dev-runtime": [
        "packages/core/dist/jsx-dev-runtime/jsx-dev-runtime",
        "packages/core/src/jsx-dev-runtime"
      ],
      "@blockslides/react": ["packages/react/dist", "packages/react/src"],
      "@blockslides/extensions/*": [
        "packages/extensions/*/dist",
        "packages/extensions/*/src"
      ],
      "@blockslides/plugins/*": [
        "packages/plugins/*/dist",
        "packages/plugins/*/src"
      ]
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "demo/**/*"
  ]
}
